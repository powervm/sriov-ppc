    - [Config] import empty debian.raspi2/config/arm64/ config files
    - [Config] updateconfigs
    - annotations: remove ACPI_CUSTOM_METHOD
    - [Config] REGULATOR_TWL4030=m
    - [Config] GPIO_TWL4030=m
    - annotations: remove HOTPLUG_PCI_PCIE
    - annotations: remove EFI_VARS
