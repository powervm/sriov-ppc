    - [Config] CONFIG_NET=m
    - [Config] CONFIG_NFC=m
    - [Config] CONFIG_NFTL=m
    - [Config] CONFIG_NLS_MAC=m
    - [Config] CONFIG_PATA_PLATFORM=m
